{
	"name": "CopyPipeline",
	"properties": {
		"activities": [
			{
				"name": "CopyFromBlobToBlob",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30
				},
				"typeProperties": {
					"source": {
						"type": "BlobSource",
						"recursive": true
					},
					"sink": {
						"type": "BlobSink"
					},
					"enableStaging": false,
					"cloudDataMovementUnits": 0
				},
				"inputs": [
					{
						"referenceName": "InputDataset",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "OutputDataset",
						"type": "DatasetReference"
					}
				]
			}
		]
	}
}